#include<stdio.h>
int main()
{
    int n,i,j;
    printf("Enter the size=");
    scanf("%d",&n);
    int a[n];
    for(i=0;i<n;i++)
    {
        printf("\na[%d]=",i);
        scanf("%d",&a[i]);
    }
    printf("inversions are:\n");
    for(i=0;i<n;i++)
    {
        for(j=i;j<n;j++)
        {
            if(i<j &&  a[i]>a[j])
            {
                printf("%d,%d\n",a[i],a[j]);
            }
        }

    }
    return 0;
}
